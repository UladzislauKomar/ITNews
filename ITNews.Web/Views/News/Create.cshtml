@model ITNews.Domain.Contracts.ViewModels.NewsViewModel

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<h1>@ViewData["CreatePost"]</h1>

<hr />
<div class="row">
	<div class="col-md-12">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Title" class="control-label">@ViewData["PostTitle"]</label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label">@ViewData["ImageLink"]</label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Content" class="control-label">@ViewData["Content"]</label>
				<textarea asp-for="Content" class="form-control" id="textareaContent"></textarea>
				<span asp-validation-for="Content" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Section.Name" class="control-label">@ViewData["Section"]</label>
				<select asp-for="Section.Name" class="custom-select">
					@foreach (var item in (IEnumerable<string>)ViewData["Sections"])
					{
						<option value="@item">@item</option>
					}
				</select>
			</div>
			<div class="form-group">
				<label for="Tags" class="control-label">@ViewData["Tags"]</label>
				<input class="form-control" id="Tags" name="Tags" />
			</div>
			<div class="form-group">
				<input type="submit" value="@ViewData["Create"]" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
	<script src="~/js/markdownLoader.js"></script>
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
