							<a asp-controller="News" asp-action="Details" asp-route-newsId="@Model[4].NewsId" class="button skw-page__button dark">подробнее</a>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
	<script src="~/js/previewJs/fit-text.js"></script>
	<script src="~/js/previewJs/functions.js"></script>

</body>
</html>