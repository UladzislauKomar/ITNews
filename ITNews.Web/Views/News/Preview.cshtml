@model IList<ITNews.Domain.Contracts.ViewModels.NewsViewModel>

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>Preview</title>

	<link rel="stylesheet" href="~/css/previewCss/main.css">
</head>
<body>

	<script src="~/js/previewJs/jquery.min.js"></script>
	<script src="~/js/previewJs/jquery.easings.min.js"></script>

	<div class="skw-pages">
		<div class="skw-page skw-page-1 active">
			<div class="skw-page__half skw-page__half--left">
				<div class="skw-page__skewed">
					<div class="skw-page__content">
						<h2 class="head">@Model[0].Title</h2>
						@if (Model[0].OutUrl != null)
						{
							<a class="button skw-page__button dark" href="@Model[0].OutUrl">подробнее</a>
						}
						else
						{
							<a asp-controller="News" asp-action="Details" asp-route-newsId="@Model[0].NewsId" class="button skw-page__button dark">подробнее</a>
						}
					</div>
				</div>
			</div>
			<div class="skw-page__half skw-page__half--right">
				<div class="skw-page__skewed">
					<div class="skw-page__content">
						<h2 class="head">@Model[1].Title</h2>
						@if (Model[1].OutUrl != null)
						{
							<a class="button skw-page__button dark" href="@Model[1].OutUrl">подробнее</a>
