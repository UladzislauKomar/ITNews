						{
							<a asp-controller="News" asp-action="Details" asp-route-newsId="@Model[3].NewsId" class="button skw-page__button dark">подробнее</a>
						}
					</div>
				</div>
			</div>
			<div class="skw-page__half skw-page__half--right">
